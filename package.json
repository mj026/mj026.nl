    "format": "biome check --write src/",
    "visualize": "vite-bundle-visualizer -c vite.config.js"
  },
  "dependencies": {
    "jiti": "^2.6.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@tailwindcss/vite": "^4.1.18",
    "@vituum/vite-plugin-nunjucks": "^1.1.0",
    "globals": "^16.5.0",
    "vite": "^7.3.1",
    "vite-bundle-visualizer": "^1.2.1"
  }
}
