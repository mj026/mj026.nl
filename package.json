{
  "name": "mj026.nl",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "VITE_APP_BUILD_TIME=$(TZ=Europe/Amsterdam date) vite build",
    "build:dev": "VITE_APP_BUILD_TIME=$(TZ=Europe/Amsterdam date) vite build --mode development",
